---
# Enable all checks by default, then selectively disable the noisy ones
Checks: >
  -*,
  bugprone-*,
  clang-analyzer-*,
  misc-*,
  modernize-*,
  -modernize-use-trailing-return-type,
  -modernize-use-using,            # C++ only
  -modernize-use-auto,             # C++ only
  -modernize-use-override,         # C++ only
  -modernize-avoid-c-arrays,       # In C, we LIKE arrays
  performance-*,
  readability-*,
  -readability-identifier-naming,
  -readability-braces-around-statements,
  -bugprone-reserved-identifier,
  -readability-isolated-declaration

# Treat all warnings as errors to keep the CRT-spirit "Uncompromising"
WarningsAsErrors: "*"

CheckOptions:
  - key:             modernize-use-nullptr.NullMacros
    value:           'NULL'
  # Silence the C++ cast suggestion specifically
  - key:             readability-casting.AllowGlobals
    value:           'true'

# Don't lint the Windows SDK headers (it's a rabbit hole of warnings)
HeaderFilterRegex: 'clicker\.c'

# Formatting tweaks for the tidy suggestions
FormatStyle: file
---
