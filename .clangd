CompileFlags:
  Add: 
    - -std=c23
    - -Wall
    - -Wextra
    - -Wpedantic
    - -D_CRT_SECURE_NO_WARNINGS
    - -DUNICODE
    - -D_UNICODE
  # This tells clangd to look for the compilation database generated by CMake
  CompilationDatabase: "build/"

Index:
  Background: true

Diagnostics:
  UnusedIncludes: Strict
  # Suppress specific Windows header noise if necessary
  Suppress: ["deprecated-declarations"]

# This helps clangd find the Windows SDK and MSVC headers if it gets lost
# (Only needed if you see 'windows.h file not found' errors)
# QueryDriver: 
#   - C:\Program Files\LLVM\bin\clang.exe
